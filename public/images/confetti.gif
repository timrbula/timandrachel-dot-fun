<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <style>
      @keyframes fall1 {
        0% { transform: translateY(-20px) rotate(0deg); opacity: 1; }
        100% { transform: translateY(120px) rotate(360deg); opacity: 0.3; }
      }
      @keyframes fall2 {
        0% { transform: translateY(-20px) rotate(0deg); opacity: 1; }
        100% { transform: translateY(120px) rotate(-360deg); opacity: 0.3; }
      }
      @keyframes fall3 {
        0% { transform: translateY(-20px) rotate(0deg); opacity: 1; }
        100% { transform: translateY(120px) rotate(180deg); opacity: 0.3; }
      }
      .confetti {
        animation-duration: 2.5s;
        animation-iteration-count: infinite;
        animation-timing-function: linear;
      }
    </style>
  </defs>
  
  <!-- Red confetti -->
  <rect class="confetti" x="15" y="10" width="4" height="8" fill="#FF1493" style="animation-name: fall1; animation-delay: 0s"/>
  <rect class="confetti" x="45" y="5" width="4" height="8" fill="#FF1493" style="animation-name: fall2; animation-delay: 0.5s"/>
  
  <!-- Blue confetti -->
  <circle class="confetti" cx="25" cy="8" r="3" fill="#4169E1" style="animation-name: fall1; animation-delay: 0.3s"/>
  <circle class="confetti" cx="70" cy="12" r="3" fill="#4169E1" style="animation-name: fall3; animation-delay: 0.8s"/>
  
  <!-- Yellow confetti -->
  <polygon class="confetti" points="35,10 38,15 32,15" fill="#FFD700" style="animation-name: fall2; animation-delay: 0.2s"/>
  <polygon class="confetti" points="60,8 63,13 57,13" fill="#FFD700" style="animation-name: fall1; animation-delay: 0.7s"/>
  
  <!-- Green confetti -->
  <rect class="confetti" x="50" y="15" width="6" height="4" fill="#32CD32" style="animation-name: fall3; animation-delay: 0.4s"/>
  <rect class="confetti" x="80" y="10" width="6" height="4" fill="#32CD32" style="animation-name: fall2; animation-delay: 0.9s"/>
  
  <!-- Pink confetti -->
  <circle class="confetti" cx="40" cy="12" r="2.5" fill="#FF69B4" style="animation-name: fall1; animation-delay: 0.6s"/>
  <circle class="confetti" cx="85" cy="8" r="2.5" fill="#FF69B4" style="animation-name: fall3; animation-delay: 0.1s"/>
  
  <!-- Orange confetti -->
  <polygon class="confetti" points="55,5 57,9 53,9" fill="#FFA500" style="animation-name: fall2; animation-delay: 0.35s"/>
  <polygon class="confetti" points="75,12 77,16 73,16" fill="#FFA500" style="animation-name: fall1; animation-delay: 0.75s"/>
  
  <!-- Purple confetti -->
  <rect class="confetti" x="30" y="8" width="5" height="5" fill="#9370DB" style="animation-name: fall3; animation-delay: 0.15s"/>
  <rect class="confetti" x="65" y="6" width="5" height="5" fill="#9370DB" style="animation-name: fall2; animation-delay: 0.55s"/>
</svg>