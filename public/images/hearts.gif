<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <style>
      @keyframes float1 {
        0% { transform: translateY(100px) scale(0.5); opacity: 0; }
        50% { opacity: 1; }
        100% { transform: translateY(-20px) scale(1); opacity: 0; }
      }
      @keyframes float2 {
        0% { transform: translateY(100px) scale(0.5); opacity: 0; }
        50% { opacity: 1; }
        100% { transform: translateY(-20px) scale(1); opacity: 0; }
      }
      @keyframes float3 {
        0% { transform: translateY(100px) scale(0.5); opacity: 0; }
        50% { opacity: 1; }
        100% { transform: translateY(-20px) scale(1); opacity: 0; }
      }
      .heart1 {
        animation: float1 3s ease-in-out infinite;
        fill: #FF1493;
      }
      .heart2 {
        animation: float2 3s ease-in-out infinite;
        animation-delay: 1s;
        fill: #FF69B4;
      }
      .heart3 {
        animation: float3 3s ease-in-out infinite;
        animation-delay: 2s;
        fill: #FFB6C1;
      }
    </style>
  </defs>
  
  <!-- Heart 1 -->
  <path class="heart1" d="M 30 40 
    C 30 35, 25 30, 20 30
    C 15 30, 10 35, 10 40
    C 10 50, 30 65, 30 65
    C 30 65, 50 50, 50 40
    C 50 35, 45 30, 40 30
    C 35 30, 30 35, 30 40 Z"/>
  
  <!-- Heart 2 -->
  <path class="heart2" d="M 50 50 
    C 50 46, 46 42, 42 42
    C 38 42, 35 46, 35 50
    C 35 58, 50 70, 50 70
    C 50 70, 65 58, 65 50
    C 65 46, 62 42, 58 42
    C 54 42, 50 46, 50 50 Z"/>
  
  <!-- Heart 3 -->
  <path class="heart3" d="M 70 35 
    C 70 32, 67 29, 64 29
    C 61 29, 58 32, 58 35
    C 58 41, 70 52, 70 52
    C 70 52, 82 41, 82 35
    C 82 32, 79 29, 76 29
    C 73 29, 70 32, 70 35 Z"/>
</svg>