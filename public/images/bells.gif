<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <style>
      @keyframes swing {
        0%, 100% { transform: rotate(-5deg); }
        50% { transform: rotate(5deg); }
      }
      .bell-group {
        transform-origin: 50px 20px;
        animation: swing 1.5s ease-in-out infinite;
      }
      .bell {
        fill: #FFD700;
        stroke: #DAA520;
        stroke-width: 2;
      }
      .ribbon {
        fill: #FF69B4;
      }
    </style>
  </defs>
  
  <g class="bell-group">
    <!-- Ribbon bow -->
    <path class="ribbon" d="M 40 15 Q 35 10 30 15 Q 35 20 40 15 M 60 15 Q 65 10 70 15 Q 65 20 60 15 M 40 15 L 50 20 L 60 15"/>
    
    <!-- Left bell -->
    <path class="bell" d="M 35 30 Q 30 35 30 45 L 40 45 Q 40 35 35 30 Z"/>
    <circle class="bell" cx="35" cy="48" r="3"/>
    
    <!-- Right bell -->
    <path class="bell" d="M 65 30 Q 60 35 60 45 L 70 45 Q 70 35 65 30 Z"/>
    <circle class="bell" cx="65" cy="48" r="3"/>
    
    <!-- Sound waves -->
    <path d="M 20 40 Q 15 45 20 50" fill="none" stroke="#FFD700" stroke-width="1.5" opacity="0.5"/>
    <path d="M 80 40 Q 85 45 80 50" fill="none" stroke="#FFD700" stroke-width="1.5" opacity="0.5"/>
  </g>
</svg>