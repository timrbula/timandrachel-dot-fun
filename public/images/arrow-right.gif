<svg width="50" height="30" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <style>
      @keyframes point {
        0%, 100% { transform: translateX(0); }
        50% { transform: translateX(5px); }
      }
      .arrow {
        animation: point 1s ease-in-out infinite;
      }
      .hand {
        fill: #FFE4C4;
        stroke: #D2B48C;
        stroke-width: 1;
      }
      .sleeve {
        fill: #4169E1;
        stroke: #1E3A8A;
        stroke-width: 1;
      }
    </style>
  </defs>
  
  <g class="arrow">
    <!-- Sleeve/cuff -->
    <rect class="sleeve" x="2" y="10" width="15" height="12" rx="2"/>
    <rect class="sleeve" x="15" y="11" width="3" height="10"/>
    
    <!-- Hand/palm -->
    <ellipse class="hand" cx="28" cy="15" rx="10" ry="8"/>
    
    <!-- Pointing finger -->
    <ellipse class="hand" cx="38" cy="15" rx="6" ry="3"/>
    <ellipse class="hand" cx="43" cy="15" rx="4" ry="2.5"/>
    
    <!-- Other fingers (curled) -->
    <ellipse class="hand" cx="28" cy="20" rx="3" ry="4"/>
    <ellipse class="hand" cx="25" cy="22" rx="2.5" ry="3"/>
    <ellipse class="hand" cx="22" cy="21" rx="2" ry="2.5"/>
    
    <!-- Thumb -->
    <ellipse class="hand" cx="24" cy="12" rx="3" ry="4" transform="rotate(-30 24 12)"/>
    
    <!-- Fingernail on pointing finger -->
    <ellipse cx="44" cy="15" rx="1.5" ry="1" fill="#FFB6C1" opacity="0.7"/>
  </g>
  
  <!-- Motion lines -->
  <line x1="46" y1="13" x2="48" y2="13" stroke="#FFD700" stroke-width="1.5" opacity="0.6">
    <animate attributeName="opacity" values="0.3;0.8;0.3" dur="1s" repeatCount="indefinite"/>
  </line>
  <line x1="46" y1="15" x2="49" y2="15" stroke="#FFD700" stroke-width="2" opacity="0.8">
    <animate attributeName="opacity" values="0.4;1;0.4" dur="1s" repeatCount="indefinite"/>
  </line>
  <line x1="46" y1="17" x2="48" y2="17" stroke="#FFD700" stroke-width="1.5" opacity="0.6">
    <animate attributeName="opacity" values="0.3;0.8;0.3" dur="1s" repeatCount="indefinite"/>
  </line>
</svg>