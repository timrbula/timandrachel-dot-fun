<svg width="30" height="50" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <style>
      @keyframes point-down {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(5px); }
      }
      .arrow {
        animation: point-down 1s ease-in-out infinite;
      }
      .hand {
        fill: #FFE4C4;
        stroke: #D2B48C;
        stroke-width: 1;
      }
      .sleeve {
        fill: #FF6347;
        stroke: #DC143C;
        stroke-width: 1;
      }
    </style>
  </defs>
  
  <g class="arrow">
    <!-- Sleeve/cuff -->
    <rect class="sleeve" x="9" y="2" width="12" height="15" rx="2"/>
    <rect class="sleeve" x="10" y="15" width="10" height="3"/>
    
    <!-- Hand/palm -->
    <ellipse class="hand" cx="15" cy="28" rx="8" ry="10"/>
    
    <!-- Pointing finger -->
    <ellipse class="hand" cx="15" cy="38" rx="3" ry="6"/>
    <ellipse class="hand" cx="15" cy="43" rx="2.5" ry="4"/>
    
    <!-- Other fingers (curled) -->
    <ellipse class="hand" cx="20" cy="28" rx="4" ry="3"/>
    <ellipse class="hand" cx="22" cy="25" rx="3" ry="2.5"/>
    <ellipse class="hand" cx="21" cy="22" rx="2.5" ry="2"/>
    
    <!-- Thumb -->
    <ellipse class="hand" cx="12" cy="24" rx="4" ry="3" transform="rotate(30 12 24)"/>
    
    <!-- Fingernail on pointing finger -->
    <ellipse cx="15" cy="44" rx="1" ry="1.5" fill="#FFB6C1" opacity="0.7"/>
  </g>
  
  <!-- Motion lines -->
  <line x1="13" y1="46" x2="13" y2="48" stroke="#FFD700" stroke-width="1.5" opacity="0.6">
    <animate attributeName="opacity" values="0.3;0.8;0.3" dur="1s" repeatCount="indefinite"/>
  </line>
  <line x1="15" y1="46" x2="15" y2="49" stroke="#FFD700" stroke-width="2" opacity="0.8">
    <animate attributeName="opacity" values="0.4;1;0.4" dur="1s" repeatCount="indefinite"/>
  </line>
  <line x1="17" y1="46" x2="17" y2="48" stroke="#FFD700" stroke-width="1.5" opacity="0.6">
    <animate attributeName="opacity" values="0.3;0.8;0.3" dur="1s" repeatCount="indefinite"/>
  </line>
</svg>