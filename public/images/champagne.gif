<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <style>
      @keyframes clink {
        0%, 100% { transform: translateX(0) rotate(0deg); }
        25% { transform: translateX(-3px) rotate(-5deg); }
        75% { transform: translateX(3px) rotate(5deg); }
      }
      @keyframes bubble {
        0% { transform: translateY(0); opacity: 1; }
        100% { transform: translateY(-20px); opacity: 0; }
      }
      .glass-left {
        animation: clink 2s ease-in-out infinite;
        transform-origin: 35px 80px;
      }
      .glass-right {
        animation: clink 2s ease-in-out infinite;
        animation-delay: 0.1s;
        transform-origin: 65px 80px;
      }
      .glass {
        fill: none;
        stroke: #E0E0E0;
        stroke-width: 2;
      }
      .champagne {
        fill: #F4E4C1;
        opacity: 0.8;
      }
      .bubble {
        fill: #FFFFFF;
        animation: bubble 2s ease-in infinite;
      }
    </style>
  </defs>
  
  <!-- Left glass -->
  <g class="glass-left">
    <path class="glass" d="M 30 40 L 25 80 L 45 80 L 40 40 Z"/>
    <line class="glass" x1="35" y1="80" x2="35" y2="90" stroke-width="2"/>
    <ellipse class="glass" cx="35" cy="90" rx="8" ry="2"/>
    <path class="champagne" d="M 31 45 L 27 75 L 43 75 L 39 45 Z"/>
    <circle class="bubble" cx="33" cy="65" r="1.5" style="animation-delay: 0s"/>
    <circle class="bubble" cx="37" cy="60" r="1" style="animation-delay: 0.5s"/>
  </g>
  
  <!-- Right glass -->
  <g class="glass-right">
    <path class="glass" d="M 60 40 L 55 80 L 75 80 L 70 40 Z"/>
    <line class="glass" x1="65" y1="80" x2="65" y2="90" stroke-width="2"/>
    <ellipse class="glass" cx="65" cy="90" rx="8" ry="2"/>
    <path class="champagne" d="M 61 45 L 57 75 L 73 75 L 69 45 Z"/>
    <circle class="bubble" cx="63" cy="65" r="1.5" style="animation-delay: 0.3s"/>
    <circle class="bubble" cx="67" cy="60" r="1" style="animation-delay: 0.8s"/>
  </g>
  
  <!-- Sparkles at clink point -->
  <circle fill="#FFD700" cx="50" cy="35" r="2" opacity="0.7"/>
  <circle fill="#FFD700" cx="48" cy="32" r="1" opacity="0.5"/>
  <circle fill="#FFD700" cx="52" cy="32" r="1" opacity="0.5"/>
</svg>