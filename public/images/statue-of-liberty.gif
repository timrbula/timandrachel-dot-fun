<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <style>
      @keyframes glow {
        0%, 100% { opacity: 0.6; }
        50% { opacity: 1; }
      }
      .statue {
        fill: #7CFC00;
        stroke: #228B22;
        stroke-width: 1;
      }
      .torch {
        fill: #FFD700;
        animation: glow 2s ease-in-out infinite;
      }
      .crown {
        fill: #7CFC00;
        stroke: #228B22;
        stroke-width: 1;
      }
      .base {
        fill: #8B7355;
      }
    </style>
  </defs>
  
  <!-- Base/pedestal -->
  <rect class="base" x="35" y="75" width="30" height="20" rx="2"/>
  <rect class="base" x="30" y="70" width="40" height="5"/>
  
  <!-- Body -->
  <path class="statue" d="M 50 40 L 45 70 L 55 70 Z"/>
  
  <!-- Robe details -->
  <line x1="47" y1="50" x2="45" y2="70" stroke="#228B22" stroke-width="0.5"/>
  <line x1="53" y1="50" x2="55" y2="70" stroke="#228B22" stroke-width="0.5"/>
  
  <!-- Left arm (holding tablet) -->
  <rect class="statue" x="38" y="50" width="3" height="15" rx="1"/>
  <rect class="statue" x="35" y="63" width="8" height="10" rx="1"/>
  
  <!-- Right arm (holding torch) -->
  <rect class="statue" x="59" y="35" width="3" height="20" rx="1"/>
  
  <!-- Torch -->
  <rect class="statue" x="58" y="30" width="5" height="8" rx="1"/>
  <path class="torch" d="M 60.5 25 L 58 30 L 63 30 Z"/>
  <circle class="torch" cx="60.5" cy="24" r="2"/>
  
  <!-- Head -->
  <circle class="statue" cx="50" cy="35" r="5"/>
  
  <!-- Crown -->
  <path class="crown" d="M 45 32 L 46 27 L 47 32 L 48 26 L 49 32 L 50 25 L 51 32 L 52 26 L 53 32 L 54 27 L 55 32 Z"/>
  
  <!-- Face details -->
  <circle cx="48" cy="35" r="0.5" fill="#228B22"/>
  <circle cx="52" cy="35" r="0.5" fill="#228B22"/>
  
  <!-- Water waves at base -->
  <path d="M 25 90 Q 30 88 35 90 Q 40 92 45 90 Q 50 88 55 90 Q 60 92 65 90 Q 70 88 75 90" 
        fill="none" stroke="#4682B4" stroke-width="2" opacity="0.5"/>
</svg>