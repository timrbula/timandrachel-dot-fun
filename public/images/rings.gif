<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <style>
      @keyframes shine {
        0%, 100% { opacity: 0.3; }
        50% { opacity: 1; }
      }
      .ring { 
        fill: none; 
        stroke: #FFD700; 
        stroke-width: 4;
      }
      .sparkle {
        fill: #FFD700;
        animation: shine 2s ease-in-out infinite;
      }
    </style>
  </defs>
  
  <!-- Left ring -->
  <circle class="ring" cx="35" cy="50" r="15"/>
  
  <!-- Right ring -->
  <circle class="ring" cx="65" cy="50" r="15"/>
  
  <!-- Sparkles -->
  <circle class="sparkle" cx="30" cy="35" r="2" style="animation-delay: 0s"/>
  <circle class="sparkle" cx="70" cy="35" r="2" style="animation-delay: 0.5s"/>
  <circle class="sparkle" cx="50" cy="45" r="2" style="animation-delay: 1s"/>
  <circle class="sparkle" cx="35" cy="65" r="1.5" style="animation-delay: 1.5s"/>
  <circle class="sparkle" cx="65" cy="65" r="1.5" style="animation-delay: 0.75s"/>
</svg>