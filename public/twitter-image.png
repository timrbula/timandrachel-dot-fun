<svg width="1200" height="600" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <style>
      .title { 
        font-family: 'Comic Sans MS', cursive, sans-serif; 
        font-size: 76px; 
        font-weight: bold;
        fill: #FF1493;
        text-anchor: middle;
      }
      .subtitle {
        font-family: 'Comic Sans MS', cursive, sans-serif;
        font-size: 46px;
        fill: #00FFFF;
        text-anchor: middle;
      }
      .date {
        font-family: 'Comic Sans MS', cursive, sans-serif;
        font-size: 54px;
        font-weight: bold;
        fill: #FFD700;
        text-anchor: middle;
      }
      .sparkle {
        fill: #FFD700;
      }
      .heart {
        fill: #FF69B4;
      }
    </style>
    <linearGradient id="bg-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#0B1026;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#1a1a3e;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0B1026;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="1200" height="600" fill="url(#bg-gradient)"/>
  
  <!-- Stars -->
  <circle class="sparkle" cx="100" cy="80" r="3"/>
  <circle class="sparkle" cx="200" cy="120" r="2"/>
  <circle class="sparkle" cx="300" cy="60" r="3"/>
  <circle class="sparkle" cx="900" cy="100" r="2"/>
  <circle class="sparkle" cx="1000" cy="150" r="3"/>
  <circle class="sparkle" cx="1100" cy="90" r="2"/>
  <circle class="sparkle" cx="150" cy="480" r="2"/>
  <circle class="sparkle" cx="1050" cy="500" r="3"/>
  
  <!-- Hearts decoration -->
  <path class="heart" d="M 200 240 L 210 250 L 200 260 L 190 250 Z" opacity="0.6"/>
  <path class="heart" d="M 1000 240 L 1010 250 L 1000 260 L 990 250 Z" opacity="0.6"/>
  <path class="heart" d="M 180 380 L 190 390 L 180 400 L 170 390 Z" opacity="0.5"/>
  <path class="heart" d="M 1020 380 L 1030 390 L 1020 400 L 1010 390 Z" opacity="0.5"/>
  
  <!-- Wedding rings -->
  <g transform="translate(600, 190)">
    <circle cx="-40" cy="0" r="35" fill="none" stroke="#FFD700" stroke-width="6"/>
    <circle cx="40" cy="0" r="35" fill="none" stroke="#FFD700" stroke-width="6"/>
    <circle cx="-35" cy="-10" r="4" fill="#FFD700" opacity="0.8"/>
    <circle cx="35" cy="-10" r="4" fill="#FFD700" opacity="0.8"/>
  </g>
  
  <!-- Text content -->
  <text class="title" x="600" y="330">Rachel & Tim</text>
  <text class="subtitle" x="600" y="395">are getting married!</text>
  <text class="date" x="600" y="470">October 9, 2026</text>
  <text class="subtitle" x="600" y="535">Brooklyn, NY</text>
</svg>