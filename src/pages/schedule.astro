    }
  }

  /* Venue Section */
  .venue-section {
    margin: 3rem 0;
  }

  .venue-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    max-width: 1000px;
    margin: 2rem auto;
