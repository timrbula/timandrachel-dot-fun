---
import BaseLayout from "../components/astro/BaseLayout.astro";
import BlinkingText from "../components/react/BlinkingText";
import RainbowDivider from "../components/react/RainbowDivider";
import GuestListManager from "../components/react/GuestListManager";
---

<BaseLayout
  title="Admin - Guest List Manager üîê"
  description="Manage wedding guest list and invitations"
>
  <div class="container">
    <!-- Page Header -->
    <section class="page-header text-center">
      <h1 class="text-3d">
        <BlinkingText client:load speed="slow">üîê</BlinkingText>
        Guest List Manager
        <BlinkingText client:load speed="slow">üîê</BlinkingText>
      </h1>
    </section>

    <RainbowDivider client:load variant="animated" />

    <!-- Guest List Manager Component -->
    <section class="manager-section">
      <GuestListManager client:load />
    </section>
  </div>

  <style>
    /* Page Header */
    .page-header {
      padding: 2rem 0;
    }

    .page-header h1 {
      font-size: 3rem;
      margin-bottom: 1rem;
    }

    .subtitle {
      font-size: 1.2rem;
      max-width: 700px;
      margin: 0 auto;
    }

    /* Manager Section */
    .manager-section {
      margin: 3rem 0;
    }

    /* Info Section */
    .info-section {
      margin: 3rem 0;
    }

    .info-box {
      max-width: 800px;
      margin: 0 auto;
      padding: 2.5rem;
    }

    .info-content p {
      font-size: 1.1rem;
      margin-bottom: 1rem;
      line-height: 1.6;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .page-header h1 {
        font-size: 2rem;
      }

      .subtitle {
        font-size: 1rem;
      }
    }
  </style>
</BaseLayout>
