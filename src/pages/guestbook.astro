<style>
  /* Page Header */
  .page-header {
    padding: 2rem 0;
  }

  .page-header h1 {
    font-size: 3.5rem;
    margin-bottom: 1rem;
  }

  .subtitle {
    font-size: 1.3rem;
    max-width: 800px;
    margin: 0 auto;
  }

  /* Introduction Section */
  .intro-section {
    margin: 3rem 0;
  }

  .intro-box {
    max-width: 800px;
    margin: 0 auto;
    padding: 2.5rem;
  }

  .intro-content p {
    font-size: 1.1rem;
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .intro-highlight {
    font-size: 1.2rem;
    font-weight: bold;
    margin-top: 1.5rem;
  }

  /* Form Section */
  .form-section {
    margin: 3rem 0;
  }

  .form-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2.5rem;
  }

  .form-container h2 {
    margin-bottom: 2rem;
  }

  /* Form Placeholder */
  .form-placeholder {
    background: rgba(255, 0, 255, 0.1);
    border: 3px dashed var(--color-magenta);
    border-radius: 12px;
    padding: 3rem 2rem;
    margin: 2rem 0;
  }

  .placeholder-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .placeholder-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
  }

  .placeholder-content h3 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .placeholder-content p {
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .contact-info {
    margin: 1.5rem 0;
    padding: 1.5rem;
    background: rgba(0, 255, 255, 0.1);
    border-radius: 8px;
  }

  .contact-info p {
    margin-bottom: 0.5rem;
  }

  .placeholder-animation {
    margin-top: 2rem;
    font-size: 1.3rem;
  }

  /* Form Preview */
  .form-preview {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 3px solid var(--color-cyan);
  }

  .form-preview h3 {
    margin-bottom: 2rem;
  }

  .preview-fields {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .preview-field label {
    display: block;
    font-weight: bold;
    color: var(--color-yellow);
    margin-bottom: 0.5rem;
  }

  .preview-input {
    background: rgba(0, 0, 0, 0.3);
    border: 2px solid var(--color-cyan);
    border-radius: 4px;
    padding: 0.8rem;
    color: var(--color-white);
    font-style: italic;
  }

  /* Entries Section */
  .entries-section {
    margin: 3rem 0;
  }

  .entries-subtitle {
    font-size: 1.1rem;
    margin: 1rem 0 2rem 0;
    color: var(--color-cyan);
  }

  .entries-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .entry-card {
    padding: 2rem;
  }

  .entry-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .entry-name {
    font-size: 1.3rem;
    font-weight: bold;
  }

  .entry-location {
    font-size: 0.95rem;
    color: var(--color-cyan);
  }

  .entry-message {
    margin: 1.5rem 0;
    line-height: 1.6;
  }

  .entry-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1rem;
    border-top: 2px solid rgba(0, 255, 255, 0.3);
    font-size: 0.9rem;
  }

  .entry-date {
    color: var(--color-yellow);
  }

  .entry-emoji {
    font-size: 1.5rem;
  }

  /* Guidelines Section */
  .guidelines-section {
    margin: 3rem 0;
  }

  .guidelines-box {
    max-width: 900px;
    margin: 0 auto;
    padding: 2.5rem;
  }

  .guidelines-content {
    margin-top: 2rem;
  }

  .guideline-item {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
    margin-bottom: 1.5rem;
  }

  .guideline-icon {
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .guideline-item p {
    line-height: 1.6;
  }

  /* Prompts Section */
  .prompts-section {
    margin: 3rem 0;
  }

  .prompts-subtitle {
    font-size: 1.1rem;
    margin: 1rem 0 2rem 0;
    color: var(--color-cyan);
  }

  .prompts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .prompt-card {
    padding: 2rem;
  }

  .prompt-card h3 {
    font-size: 1.4rem;
    margin-bottom: 1rem;
  }

  .prompt-card ul {
    margin: 0.5rem 0 0 1.5rem;
  }

  .prompt-card li {
    margin-bottom: 0.8rem;
    line-height: 1.5;
    font-style: italic;
  }

  /* Stats Section */
  .stats-section {
    margin: 3rem 0;
  }

  .stats-box {
    max-width: 800px;
    margin: 0 auto;
    padding: 2.5rem;
  }

  /* CTA Section */
  .cta-section {
    margin: 3rem 0;
  }

  .cta-box {
    max-width: 700px;
    margin: 0 auto;
    padding: 3rem 2rem;
  }

  .cta-text {
    font-size: 1.2rem;
    margin: 1.5rem 0;
  }

  .cta-buttons {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-top: 2rem;
  }

  /* Links */
  a {
    text-decoration: underline;
  }

  a:hover {
    opacity: 0.8;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2.5rem;
    }

    .subtitle {
      font-size: 1.1rem;
    }

    .entries-container {
      grid-template-columns: 1fr;
    }

    .prompts-grid {
      grid-template-columns: 1fr;
    }

    .cta-buttons {
      grid-template-columns: 1fr;
    }
  }
</style>
