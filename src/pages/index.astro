<style>
  /* Hero Section */
  .hero-section {
    padding: 3rem 0;
  }

  .hero-section h1 {
    font-size: 4rem;
    margin-bottom: 1rem;
  }

  .hero-section h2 {
    font-size: 2.5rem;
    margin-bottom: 2rem;
  }

  .wedding-date {
    max-width: 600px;
    margin: 2rem auto;
    padding: 2rem;
  }

  .date-text {
    font-size: 1.8rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
  }

  .location-text {
    font-size: 1.3rem;
  }

  .countdown {
    max-width: 400px;
    margin: 2rem auto;
    padding: 2rem;
  }

  .countdown h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .countdown-number {
    font-size: 5rem;
    font-weight: bold;
    margin: 1rem 0;
    line-height: 1;
  }

  .countdown-label {
    font-size: 1.5rem;
    color: var(--color-yellow);
  }

  /* Welcome Section */
  .welcome-section {
    max-width: 800px;
    margin: 3rem auto;
  }

  .welcome-section h2 {
    margin-bottom: 1.5rem;
  }

  .welcome-section p {
    font-size: 1.1rem;
    line-height: 1.8;
  }

  /* Quick Links */
  .quick-links-section {
    margin: 3rem 0;
  }

  .button-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    max-width: 900px;
    margin: 2rem auto;
  }

  /* Story Section */
  .story-section {
    max-width: 800px;
    margin: 3rem auto;
  }

  .story-content p {
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: 1rem;
  }

  /* Info Section */
  .info-section {
    margin: 3rem 0;
  }

  .info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .info-box {
    text-align: center;
    padding: 2rem;
  }

  .info-box h3 {
    font-size: 1.8rem;
    margin-bottom: 1rem;
  }

  .info-box p {
    margin-bottom: 0.5rem;
  }

  .info-box button,
  .info-box a {
    margin-top: 1rem;
  }

  /* RSVP CTA */
  .rsvp-cta {
    max-width: 700px;
    margin: 3rem auto;
    padding: 3rem 2rem;
  }

  .rsvp-text {
    font-size: 1.2rem;
    margin: 1.5rem 0;
  }

  /* Badges Section */
  .badges-section {
    margin: 3rem 0;
  }

  .badges-container {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 1.5rem;
  }

  /* Construction Section */
  .construction-section {
    margin: 3rem 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-section h1 {
      font-size: 2.5rem;
    }

    .hero-section h2 {
      font-size: 1.8rem;
    }

    .date-text {
      font-size: 1.3rem;
    }

    .location-text {
      font-size: 1rem;
    }

    .countdown-number {
      font-size: 3.5rem;
    }

    .countdown-label {
      font-size: 1.2rem;
    }

    .button-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .info-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>
