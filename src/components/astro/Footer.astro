<style>
  .site-footer {
    background: linear-gradient(
      180deg,
      rgba(0, 0, 80, 0.95),
      rgba(0, 0, 128, 0.95)
    );
    border-top: 5px solid;
    border-image: linear-gradient(90deg, #00ff00, #ffff00, #00ffff, #ff00ff) 1;
    padding: 2rem 0 1rem;
    margin-top: 4rem;
    box-shadow: 0 -4px 8px rgba(0, 0, 0, 0.5);
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    margin: 2rem 0;
  }

  .footer-section {
    text-align: center;
  }

  .made-with-love {
    font-size: 1.2rem;
    font-weight: bold;
    margin: 0;
  }

  .copyright {
    font-size: 0.9rem;
    color: #00ffff;
    margin: 0.5rem 0;
  }

  .footer-links {
    font-size: 0.9rem;
    margin: 0.5rem 0;
  }

  .footer-links a {
    color: #ffff00;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .footer-links a:hover {
    color: #ff00ff;
    text-decoration: underline;
  }

  .separator {
    margin: 0 0.5rem;
    color: #00ffff;
  }

  .best-viewed-badge {
    margin: 1rem 0;
  }

  .best-viewed-badge img {
    display: inline-block;
    border: 2px solid #00ffff;
    box-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
  }

  .footer-badges {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin: 1rem 0;
  }

  .footer-message {
    margin-top: 2rem;
  }

  .footer-message p {
    margin: 0.5rem 0;
  }

  .small-text {
    font-size: 0.85rem;
    color: #00ffff;
  }

  .small-text a {
    color: #ffff00;
    font-weight: bold;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .site-footer {
      padding: 1.5rem 0 1rem;
      margin-top: 3rem;
    }

    .footer-content {
      gap: 1rem;
      margin: 1.5rem 0;
    }

    .made-with-love {
      font-size: 1rem;
    }

    .copyright,
    .footer-links {
      font-size: 0.8rem;
    }

    .footer-badges {
      gap: 0.5rem;
    }

    .small-text {
      font-size: 0.75rem;
    }
  }

  @media (max-width: 480px) {
    .footer-links {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
    }

    .separator {
      display: none;
    }
  }
</style>
